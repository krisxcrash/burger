<!-- This is the jumbotron and main header -->
<div class="container">
    <div class="jumbotron">
    <h1 id="header">
        <span class="glyphicon glyphicon-cutlery"></span> 
        Burger Burger
    </h1>
        <hr/>
        <h3>We make your burger dreams come true.</h3>
    </div>
</div>

<!-- This is where the data is updated to the window -->
<div class="container">
    <div class="col-md-6">
        <ul class="list-group">
            {{#each burger}}
                {{#unless this.devoured}}
                <li class="list-group-item">
                    <h4>
                        {{this.burger_name}}
                    </h4>
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="burger_name" value="true">
                    <button class= "form-control"  type="submit">Om Nom Nom!</button>
                    </form>
                </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <ul class="list-group">
        {{#each burger}}
            {{#if this.devoured}}
            <li class="list-group-item">
                <h4>
                    {{this.burger_name}}
                </h4>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="burger_name" value="false">
                <button class= "form-control" type="submit">I want more!</button>
                </form>
            </li>
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<!-- This is where the client will add their burger -->
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="burg"><h4>Burger:</h4></label>
        <input class="form-control" type="text" id="burg" name="burger_name" placeholder="List your burger here!">
    </div>

    <button class= "form-control" type="submit" name="devoured" value="0">I'm Hungry!</button>

</form>